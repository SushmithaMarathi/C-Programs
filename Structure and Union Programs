PROGRAM:
#include <stdio.h>
struct test
{
    char a;
    int b;
    float c;
}s;
int main() {
    printf("size=%u\n",sizeof(s));
    return 0;
}
OUTPUT:
size=12
PROGRAM:
#include <stdio.h>
union test
{
    char a;
    int b;
    float c;
}s;
int main() {
    printf("size=%u\n",sizeof(s));
    return 0;
}
OUTPUT:
size=4
PROGRAM:
#include <stdio.h>
struct test
{
    char a;
    int b;
    float c;
}s;
void fun(struct test s1)
{
    printf("char=%c\n",s1.a);
    printf("int=%d\n",s1.b);
    printf("float=%f\n",s1.c);
}
int main() {
    printf("Enter the char, int, float values\n");
    scanf("%c",&s.a);
    scanf("%d",&s.b);
    scanf("%f",&s.c);
     fun(s);
    return 0;
}
OUTPUT:
Enter the char, int, float values
S
23
13.21
char=S
int=23
float=13.210000
